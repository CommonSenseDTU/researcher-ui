doctype html
html(lang="en")
  head
    title Surveys
    include /ios.pug
    include /mdl.pug
    include /common.pug
    link(rel='stylesheet', href='/public/stylesheet/static-header.css')
    style
      include studies.css
  body
    .mdl-layout.mdl-js-layout
      header.mdl-layout__header
        .mdl-layout__header-row(style='padding-left: 15pt;')
          span.mdl-layout-title
            h5 My Studies
          .mdl-layout-spacer
          span.mdl-layout-title
            h6.menu(id='account') Logged in
            ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu(for='account')
              a(href='#'): li.mdl-menu__item User Information
              a(href='/logout'): li.mdl-menu__item Log out
      main.mdl-layout__content
        .mdl-grid
          .mdl-cell
            .study-card.mdl-card.mdl-shadow--2dp
              a(href='#')
                img.study-icon(src='/src/studies/assets/app-icon.png')
                h5 Create new study
                div
                  span.blue.dot
                  span.dot-text Prepare consent document
                .study-text(style='padding-top: 5pt;') 0 participants
          each study in studies
            .mdl-cell
              .study-card.mdl-card.mdl-shadow--2dp
                a(href='#')
                  img.study-icon(src=study.icon)
                  h5= study.title
                  div
                    if study.task.steps.length == 0
                      span.blue.dot
                      span.dot-text Prepare consent document
                    else if study.participantIds.length == 0
                      span.blue.dot
                      span.dot-text Publish study
                    else
                      span.green.dot
                      span.dot-text Active
                  .study-text(style='padding-top: 5pt;') #{study.participantIds.length} participants
