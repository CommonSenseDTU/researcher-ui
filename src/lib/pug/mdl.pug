style.
  body, p, a, h1, h2, h3, h4, h5, h6, 
    .mdl-textfield__label, .mdl-textfield__error,
    div, span, button, .mdl-button, .mdl-textfield__label {
    
    font-family: 'SF UI Display', 'SF UI Text', BlinkMacSystemFont,
      'Helvetica Neue', 'HelveticaNeue',
      "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
    font-weight: normal;
  }
  .mdl-textfield__label {
    font-weight: lighter;
  }
  a {
    color: black;
    text-decoration: none;
  }
  a:hover {
    color: rgb(127, 176, 255);
  }
  .mdl-dialog {
    left: 68px;
    right: 68px;
    top: 68px;
    width: auto;
  }
  @media only screen 
    and (min-device-width: 320px) 
    and (max-device-width: 480px)
    and (-webkit-min-device-pixel-ratio: 2) {
    
    .mdl-textfield__label {
      color: rgba(0,0,0,.55);
      font-weight: normal;
  }
  